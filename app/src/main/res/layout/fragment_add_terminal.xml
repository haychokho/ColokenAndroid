<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="haychokho.colokenandroid.AddTerminalFragment"
    android:background="#ff000000">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Terminal Name"
            android:ems="10"
            android:id="@+id/fieldTerminalName"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Terminal ID"
            android:ems="10"
            android:id="@+id/fieldTerminalId"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/fieldTerminalPassword"
            android:text="Password"
            android:textColor="#ffffffff"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="connect"
            android:id="@+id/buttonAddTerminal"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</FrameLayout>
